}

.print-download li:last-child {
    border-left: 1px solid #dedede;
}

.holliday h1 {
    font-size: 43px;
    font-weight: 300;
    color: #232323;
    margin-bottom: 0px;
    margin-top: 25px;
}

.holliday h1.widget_h {
    margin-top: 0px;
    margin-bottom: 15px;
}

.holliday h2 {
    font-size: 24px;
    font-weight: 300;
    color: #232323;
    margin-top: 0px;
    margin-bottom: 0px;
}

.holliday h3 {
    font-size: 18px;
    font-weight: 600;
    color: #232323;
}

.holliday hr {
    margin-top: 10px;
    border-top: 1px solid #fba61a;
}
